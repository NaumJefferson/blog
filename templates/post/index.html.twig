{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1>Posts</h1> <a href="{{path('post_create')}}" class="btn btn-sm btn-success">Criar</a>
    <br/>
    <br/>
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Titulo</td>
                <td>Autor</td>
                <td>Created At</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{post.id}}</td>
                    <td>{{post.titulo}}</td>
                    <td>{{post.author ? post.author.firstName() : '-'}}</td>
                    <td>{{post.createdAt|date('d/m/Y H:i:s')}}</td>
                    <td>
                        <a href="{{path('post_edit', {id: post.id})}}" class="btn btn-sm btn-primary">Editar</a>
                        <a href="{{path('post_remove', {id: post.id})}}" class="btn btn-sm btn-danger">Remover</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
