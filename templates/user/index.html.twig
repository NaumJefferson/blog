{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    {% for message in app.session.flashbag.get('success') %}
        <h2> {{message}}</h2>
    {% endfor %}

    <h1>Users</h1> <a href="{{path('user_create')}}">New</a>

    <ul>
        {% for user in users %}
            <li> 
                {{user.id}} - {{user.firstName}} {{user.lastName}}- {{user.createdAt|date('d/m/Y H:i:s')}}
                <a href="{{path('user_edit', {id: user.id})}}">Editar</a>
                <a href="{{path('user_remove', {id: user.id})}}">Remover</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}
